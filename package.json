{
  "name": "accelerator-ui",
  "description": "accelerator-ui",
  "dependencies": {
    "wpe-lightning-sdk": "rdkcentral/Lightning-SDK"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "ThunderJS": "github:rdkcentral/ThunderJS",
    "babel-eslint": "^10.0.3",
    "cypress": "^4.6.0",
    "dash.js": "^4.0.0",
    "dashjs": "^3.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "hls.js": "^0.13.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.0.3",
    "mochawesome-report-generator": "^5.1.0",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "cy:run": "npx cypress run",
    "cy:merge": "npx mochawesome-merge ./cypress/reports/*.json>./cypress/index.json",
    "cy:merged-report": "npx mochawesome-report-generator -f index.html -o ./cypress/reports/ --charts true ./cypress/index.json",
    "cypress": "npm run cy:run && npm run cy:merge && npm run cy:merged-report"
  }
}
